{
  "name": "sqlsift",
  "displayName": "sqlsift",
  "description": "SQL static analysis against schema definitions",
  "version": "0.1.0",
  "publisher": "sqlsift",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yukikotani231/sqlsift"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Linters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:sql"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "sqlsift",
      "properties": {
        "sqlsift.serverPath": {
          "type": "string",
          "default": "sqlsift-lsp",
          "description": "Path to the sqlsift-lsp binary"
        }
      }
    },
    "languages": [
      {
        "id": "sql",
        "extensions": [
          ".sql"
        ],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
